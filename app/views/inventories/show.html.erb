			<td class="center"><%= i.delivery_number %></td>
			<td class="center"><%= i.beg_balance %></td>
			<td class="center"><%= i.item_in %></td>
			<td class="center"><%= i.item_out %></td>
			<td class="center"><%= i.balance %></td>
<td class="center"><%= link_to 'Edit', edit_inventory_url(i) %> <%= link_to 'Delete', inventory_url(i), :method => :delete, :confirm => "Are you sure you want to remove inventory entry?" %></td>
<td><%= i.created_at %></td>
<td><%= i.updated_at %></td>
		</tr>
		<% end %>
	</tbody>
</table>
