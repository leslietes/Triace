<h2><%= @product.name %></h2><br/>
<table>
	<thead>
		<th>DR No</th>
		<th>Beginning</th>
		<th>In</th>
		<th>Out</th>
		<th>Balance</th>
                <th>Created At</th>
                <th>Updated At</th>
     <th>Actions</th>
	</thead>
	<tbody>
		<% @inventories.each do |i| %>
