<%= form_for [@delivery,@delivery_detail] do |f| %>
  <% if @delivery_detail.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(@delivery_detail.errors.count, "error")%> prohibited this entry from being saved:</h2>
        <ul>
          <% @delivery_detail.errors.full_messages.each do |d| %>
		    <li><%= msg %></li>
		  <% end %>
        </ul>
    </div>
  <% end %>
  
  <div class="field">
  	<%= f.label :delivery_id %>
	<%= f.text_field :delivery_id, :readonly => 'readonly' %>
  </div>
  
  <div class="field">
  	<%= f.label :quantity %>
	<%= f.text_field :quantity %>
  </div>
  
  <div class="field">
  	<label>Unit</label>
	<%= f.text_field :unit %>
  </div>
  
  <div class="field">
  	<%= f.label :product_id %>
        <%= f.select :product_id, options_from_collection_for_select(@products, "id","name", @delivery_detail.product_id), :include_blank => true %>
  </div>
  
  <div class="field">
  	<label>Count/Pack</label>
	<%= f.text_field :count_per_pack %>
  </div>
  
  <div class="field">
  	<label>Unit Price</label>
	<%= f.text_field :distributors_price %>
  </div>
  
  <div class="actions">
  	<%= f.submit 'Save' %>&nbsp;&nbsp;&nbsp;<%= link_to 'Cancel', delivery_path(@delivery) %>
  </div>
<% end %>
